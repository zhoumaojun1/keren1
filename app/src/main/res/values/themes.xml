    <dimen name="defaultTextSize">14sp</dimen>
    <dimen name="defaultLinHeight">0.3dp</dimen>
    <dimen name="defaultSplitHeight">10dp</dimen>
    <!-- 横向线条 -->
    <style name="h_line">

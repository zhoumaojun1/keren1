<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Keren" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_1FC8A9</item>
        <item name="colorPrimaryVariant">@color/color_1FC8A9</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_1FC8A9</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>
    <dimen name="s16">16sp</dimen>
    <dimen name="s12">12sp</dimen>
    <dimen name="s18">18sp</dimen>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--        <item name="android:windowContentTransitions">true</item>-->
        <item name="colorPrimary">@color/default_colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/default_colorPrimary</item>


<!--        <item name="colorPrimary">@color/white</item>-->
<!--        <item name="colorPrimaryDark">@color/white</item>-->
<!--        <item name="colorAccent">@color/white</item>-->
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <color name="default_colorPrimary">#1EA3FF</color>

    <style name="buttonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <!--        <item name="colorOnPrimary">@color/white</item>-->
    </style>
    <style name="OnClick">
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="TextAppearanceAppCompatSmallError">
        <item name="android:textColor">@color/red</item>
        <!--        <item name="android:fontFamily">@font/mark_pro_bold</item>-->
    </style>
    <style name="PasswordEditTextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:textSize">@dimen/text_size_normal</item>-->
        <item name="android:textColor">@color/color_1F6BC4</item>
        <item name="android:maxLength">60</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="TextAppearanceAppCompatSmallHint">
        <item name="android:textColor">@color/gray</item>
        <!--        <item name="android:fontFamily">@font/mark_pro_book</item>-->
    </style>

    <style name="checkboxStyle">
        <item name="android:colorControlHighlight">@color/color_1FC8A9</item>
        <item name="colorAccent">@color/color_1FC8A9</item>
    </style>

    <style name="textStartStyle">
        <item name="android:textColor">#000</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>

        <item name="android:textSize">16sp</item>

    </style>

    <style name="textEndStyle">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <!--实现BottomSheetDialog圆角效果-->


    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <!--是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮在窗口之上-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--关键的一步：设置背景颜色为透明 -->
        <item name="android:background">@android:color/transparent</item>
        <!--是否充许对话框的背景变暗。为true则充许变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppBottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="settingsUserInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_right_24dp</item>
        <item name="android:layout_marginLeft">16dp</item>

    </style>
    <style name="settingsUserInfoItem1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_right_24dp</item>
        <item name="android:layout_marginLeft">16dp</item>

    </style>



    <style name="setInstallItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:layout_marginRight">@dimen/margin_right_24dp</item>


    </style>
    <style name="settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>

        <item name="android:layout_marginRight">@dimen/margin_right_24dp</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <style name="setViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:color">@color/del</item>
        <item name="android:layout_marginRight">@dimen/margin_right_24dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_right_24dp</item>

    </style>

    <style name="helpService">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/margin_right_24dp</item>
        <item name="android:layout_marginLeft">30dp</item>

    </style>
    <style name="elevationItemTitle">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>
    <style name="elevationItemTitle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>
    <style name="setMineItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_333333</item>

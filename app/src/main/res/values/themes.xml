        <item name="android:layout_marginLeft">@dimen/margin_right_24dp</item>
        <item name="android:layout_marginRight">34dp</item>
    </style>

    <style name="itemRightImage">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:color">@color/color_86898</item>
        <item name="android:hint">未设置</item>

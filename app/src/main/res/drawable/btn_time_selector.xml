<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_1FC8A9" />
            <corners android:bottomLeftRadius="15.0dip" android:topLeftRadius="15.0dip"
                android:bottomRightRadius="15.0dip" android:topRightRadius="15.0dip" />
        </shape>

    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/text_dark" />
            <solid android:color="@color/transparent" />
            <corners android:bottomLeftRadius="15.0dip" android:topLeftRadius="15.0dip"
                android:bottomRightRadius="15.0dip" android:topRightRadius="15.0dip" />
        </shape>
    </item>
</selector>
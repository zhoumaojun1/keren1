<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/iv_delete_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right_24dp"
        android:layout_marginTop="14dp"

        android:layout_marginRight="@dimen/margin_right_24dp"
        android:src="@mipmap/my_traffic_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <LinearLayout
        android:id="@+id/ll_one_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_5_black_bg"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_delete_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_right_24dp"
            android:paddingTop="20dp"
            android:text="选择套餐"
            android:textColor="@color/color_86898"
            android:textSize="@dimen/size_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_right_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/margin_right_24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:layout_weight="1"
                android:background="@drawable/bounder"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_special_reco"
                    android:text="@string/my_traffic_card_recommend"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"

                    android:text="@string/my_traffic_card_three_month"
                    android:textColor="@color/color_00000"

                    android:textSize="@dimen/size_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_right_24dp"
                    android:layout_marginTop="2dp"
                    android:text="￥45"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="98元"
                    android:textColor="@color/color_86898"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/corner_5_blue"

                    android:paddingLeft="6dp"
                    android:paddingTop="4dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="4dp"
                    android:singleLine="true"
                    android:text="@string/my_traffic_card_infinite_traffic_packet"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:layout_marginLeft="@dimen/margin_top_15dp"
                android:layout_weight="1"
                android:background="@drawable/pet_shape_police_info"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"



                    android:text="@string/my_traffic_card_three_month"
                    android:textColor="@color/color_00000"

                    android:textSize="@dimen/size_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="2dp"
                    android:src="@mipmap/card_location_user"
                    android:text="￥45"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:text="98元"
                    android:textColor="@color/color_86898"

                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/corner_5_black"
                    android:paddingLeft="6dp"
                    android:paddingTop="4dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="4dp"
                    android:text="@string/my_traffic_card_infinite_traffic_packet"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="165dp"
                android:layout_marginLeft="@dimen/margin_top_15dp"

                android:layout_weight="1"
                android:background="@drawable/pet_shape_police_info"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"

                    android:text="@string/my_traffic_card_three_month"
                    android:textColor="@color/color_00000"

                    android:textSize="@dimen/size_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:text="￥45"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_32sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="98元"
                    android:textColor="@color/color_86898"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/corner_5_black"
                    android:paddingLeft="6dp"
                    android:paddingTop="4dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="4dp"
                    android:text="@string/my_traffic_card_infinite_traffic_packet"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_12sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right_24dp"

        android:layout_marginTop="20dp"
        android:text="@string/my_traffic_card_select"
        android:textColor="@color/color_86898"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/ll_one_view" />

    <RelativeLayout
        android:id="@+id/rl_wechat_payment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"

        android:background="@color/white"
        android:paddingLeft="@dimen/margin_right_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_one_view">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/wechat_payment" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/setMineItemTitle"
            android:layout_centerVertical="true"

            android:paddingLeft="22dp"
            android:text="@string/my_traffic_card_wechat_payment" />


        <CheckBox
            android:id="@+id/cb_agree_wechat_payment"
            style="@style/itemRightImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:button="@null"
            android:drawableLeft="@drawable/shape_login_agree_selector"
            android:drawablePadding="10dip"
            android:focusable="false"
            android:paddingLeft="10dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        style="@style/setViewLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_wechat_payment" />

    <RelativeLayout
        android:id="@+id/rl_alipay_way"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"

        android:paddingLeft="@dimen/margin_right_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/alipay_payment" />

        <TextView
            style="@style/setMineItemTitle"
            android:layout_centerVertical="true"
            android:paddingLeft="22dp"
            android:text="@string/my_traffic_card_alipay" />


        <CheckBox
            android:id="@+id/cb_agree"
            style="@style/itemRightImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:button="@null"
            android:drawableLeft="@drawable/shape_login_agree_selector"
            android:drawablePadding="10dip"
            android:focusable="false"
            android:paddingLeft="10dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_sure_pay"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_right_24dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/my_traffic_card_altogether"
           />

        <TextView
            style="@style/setMineItemTitle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_all"
            android:text="￥45"
            android:textSize="40sp" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corner_5_blue"
            android:paddingLeft="40dp"
            android:paddingTop="18dp"
            android:paddingRight="40dp"
            android:paddingBottom="18dp"
            android:layout_marginRight="@dimen/margin_right_24dp"
            android:text="@string/my_traffic_card_now_payment"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp"

            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    tools:context=".user.home.main.HomeTabActivity">

    <TextView
        android:id="@+id/tv_card_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="42dp"
        android:background="@mipmap/app_logo_icon"
        app:layout_constraintEnd_toStartOf="@+id/line_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/line_height"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="42dp"

        android:background="@color/color_EFEEF1"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_card_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:maxEms="4"
        android:gravity="left"
        android:paddingTop="@dimen/dimen_5"
        android:singleLine="true"
        android:text="SRT7"
        android:textColor="@color/white_full"
        android:textSize="@dimen/size_24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/line_height"
        app:layout_constraintEnd_toStartOf="@+id/ivMenuSetting"
        app:layout_constraintStart_toEndOf="@+id/line_height" />

    <ImageView
        android:id="@+id/ivMenuSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginRight="34dp"
        android:src="@mipmap/main_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="24dp"
        android:src="@mipmap/mine_voice_use_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_current_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"

        android:layout_marginTop="18dp"
        android:text="风速"
        android:textColor="@color/color_AAAAAA"
        android:textSize="@dimen/size_12sp"

        app:layout_constraintStart_toEndOf="@+id/tv_current_weather"
        app:layout_constraintTop_toBottomOf="@id/ivMenuSetting" />

    <TextView
        android:id="@+id/tv_current_wind_speed_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:text="南风一级"
        android:textColor="@color/white"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_current_weather"
        app:layout_constraintTop_toBottomOf="@id/ivMenuSetting" />

    <TextView
        android:id="@+id/tv_current_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="18dp"
        android:text="@string/main_current_weather_01"
        android:textColor="@color/color_AAAAAA"
        android:textSize="@dimen/size_12sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMenuSetting" />

    <TextView
        android:id="@+id/tv_current_weather_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="18dp"
        android:text="大风"
        android:textColor="@color/white"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMenuSetting" />

    <TextView
        android:id="@+id/tv_current_tmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:text="@string/main_current_temperature_01"
        android:textColor="@color/color_AAAAAA"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_current_tmp1"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMenuSetting" />

    <TextView
        android:id="@+id/tv_current_tmp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="18dp"
        android:text="26℃"
        android:textColor="@color/white"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_current_weather"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMenuSetting" />


    <TextView
        android:id="@+id/tv_point_out"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:autoLink="all"

        android:background="@color/color_1FC8A9"
        android:drawableLeft="@mipmap/main_all_msg_notify"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="52dp"
        android:text="@string/hello_keren_point_out"
        android:textColor="@color/white_full"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_current_tmp" />

    <com.wja.keren.user.home.view.BatteryView
        android:id="@+id/horizontalBattery"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:gravity="center"
        app:batteryColor="@color/white_full"
        app:batteryOrientation="horizontal"
        app:batteryPower="70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_point_out" />
    <com.wja.keren.user.home.view.BatteryView1
        android:id="@+id/horizontalBattery1"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        android:gravity="center"
        app:batteryColor="@color/white_full"
        app:batteryOrientation="horizontal"
        app:batteryPower="70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalBattery" />


    <TextView
        android:id="@+id/tvBatteryRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/main_battery_remaining"
        android:textColor="@color/white_full"
        android:textSize="@dimen/size_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalBattery" />

    <TextView
        android:id="@+id/tvBatteryRemaining_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="18dp"
        android:text="%"
        android:textColor="@color/white_full"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintLeft_toRightOf="@+id/tvBatteryRemaining"
        app:layout_constraintTop_toBottomOf="@id/horizontalBattery" />


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@color/color_000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalBattery">

        <ImageView
            android:id="@+id/iv_add_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="105dp"
            android:clickable="true"
            android:src="@mipmap/add_scan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBatteryRemaining" />

        <TextView
            android:id="@+id/tv_unbound_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="195dp"
            android:text="@string/card_unbound_card"
            android:textColor="@color/white_full"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_add_card" />


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_000000"
            android:fillViewport="true"
            android:scrollbars="none"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBatteryRemaining_1">


            <LinearLayout
                android:id="@+id/ll_add_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/color_000000"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_one_view"

                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@color/transparent"
                    android:orientation="horizontal"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        android:background="@color/transparent"
                        app:cardElevation="0dp">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewpager2"
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/container_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"


                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="165dp"
                            android:visibility="gone"
                            android:text="添加设备"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_two_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_000000">

                        <ImageView
                            android:id="@+id/iv_add_card_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"

                            android:layout_marginTop="70dp"
                            android:src="@mipmap/add_scan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="165dp"
                            android:text="@string/card_add_new_card"
                            android:textColor="@color/white_full"
                            android:textSize="@dimen/size_16sp" />


                        <ImageView
                            android:id="@+id/iv_card_unbind_bg_01"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/main_card_default_bg" />

                    </FrameLayout>


                </LinearLayout>
            </LinearLayout>

        </HorizontalScrollView>



    </FrameLayout>

    <ImageView
        android:id="@+id/iv_card_unbind_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_card_default_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_point_out" />

    <ImageView
        android:id="@+id/iv_left_slide_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:src="@mipmap/main_right_menu"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvBatteryRemaining_1"
        app:layout_constraintTop_toBottomOf="@id/tvBatteryRemaining_1" />

    <ImageView
        android:id="@+id/iv_right_slide_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:src="@mipmap/main_left_menu"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/tvBatteryRemaining_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBatteryRemaining_1" />

     <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayout">

        <ImageView
            android:id="@+id/iv_xiao_ke_rebot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="@dimen/margin_right_24dp"
            android:src="@mipmap/mine_small_robot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_card_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_right_24dp"
            android:src="@mipmap/main_cabin_lock"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@+id/iv_card_open1"
            app:layout_constraintTop_toBottomOf="@+id/iv_xiao_ke_rebot"
            tools:ignore="MissingConstraints" />

        <FrameLayout
            android:id="@+id/iv_card_open1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_xiao_ke_rebot"
            tools:ignore="MissingConstraints">

            <com.wja.keren.user.home.view.CircleProgressView
                android:id="@+id/progress_circular"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:startAngle1="90" />

            <TextView
                android:id="@+id/progress_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_1FC8A9"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_card_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/open_card"
                android:paddingBottom="@dimen/margin_right_24dp"
                tools:ignore="MissingConstraints" />

        </FrameLayout>


        <ImageView
            android:id="@+id/iv_card_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_right_24dp"
            android:src="@mipmap/main_left"
            app:layout_constraintEnd_toStartOf="@+id/iv_card_open1"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_xiao_ke_rebot"
            tools:ignore="MissingConstraints" />

        <HorizontalScrollView
            android:id="@+id/scrollable"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_card_share">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_service_point"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/main_service_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="服务网点"
                        android:textColor="@color/color_AAAAAA"
                        android:textSize="@dimen/size_12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_tab_line" />

                <LinearLayout
                    android:id="@+id/ll_service_fence"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/main_fence_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="电子围栏"
                        android:textColor="@color/color_AAAAAA"
                        android:textSize="@dimen/size_12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_tab_line" />

                <LinearLayout
                    android:id="@+id/ll_key_share"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/main_key_share_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="钥匙分享"
                        android:textColor="@color/color_AAAAAA"
                        android:textSize="@dimen/size_12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_tab_line" />

                <LinearLayout
                    android:id="@+id/ll_run_navigation"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/main_run_location_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="骑行导航"
                        android:textColor="@color/color_AAAAAA" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_tab_line" />

                <LinearLayout
                    android:id="@+id/ll_card_location"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/main_card_location" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="车辆位置"
                        android:textColor="@color/color_AAAAAA" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_tab_line" />

                <LinearLayout
                    android:id="@+id/ll_run_record"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/main_card_location_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="骑行记录"
                        android:textColor="@color/color_AAAAAA" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_tab_line" />
            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
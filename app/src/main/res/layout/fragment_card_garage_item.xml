<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F5F5F5"
    tools:context=".user.home.auth.ForgetPassNextActivity">

    <RelativeLayout
        android:id="@+id/rl_sear_phone_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_right_24dp"
        android:layout_marginRight="@dimen/dimen_24"
        android:paddingLeft="@dimen/dimen_24"
        android:paddingRight="@dimen/dimen_24"
        android:paddingTop="@dimen/dimen_26"
        android:background="@drawable/shape_share_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_card_share_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/card_share_left" />

        <TextView
            android:id="@+id/iv_card_share_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"

            android:layout_toRightOf="@+id/iv_card_share_photo"
            android:text="SAR5-HiLink"
            android:textColor="@color/color_333333"

            android:textSize="@dimen/dimen_24" />

        <TextView
            android:id="@+id/iv_card_share_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_card_share_name"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv_card_share_photo"
            android:text="2023-11-13  14ï¼š53"
            android:textColor="@color/color_86898"
            android:textSize="@dimen/size_12sp" />



    </RelativeLayout>






</androidx.constraintlayout.widget.ConstraintLayout>
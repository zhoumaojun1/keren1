        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tv_card_run_end_location"
            android:background="@color/white_eeeeee" />

        <LinearLayout
            android:id="@+id/ll_one_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_card_run_mileage"
                android:textColor="@color/color_86898"
                android:textSize="@dimen/size_12sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_run_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56.8"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="3dp"
                    android:text="km"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_12sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_two_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/ll_one_view"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="25dp"
                android:text="@string/mine_card_run_time"
                android:textColor="@color/color_86898"
                android:textSize="@dimen/size_12sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_run_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="min"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_12sp" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_three_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/ll_two_view"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/mine_card_run_speed"
                android:textColor="@color/color_86898"
                android:textSize="@dimen/size_12sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="24dp"
           android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_run_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="3dp"
                    android:text="km/h"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_12sp" />
            </LinearLayout>


        </LinearLayout>
        <ImageView
             android:id="@+id/iv_track_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/ll_three_view"
            android:layout_marginLeft="26dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/card_run_record_locus" />


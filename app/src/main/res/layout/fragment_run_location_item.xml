            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_card_run_record_start"
            android:layout_below="@+id/tv_card_run_start_location"
            android:layout_marginTop="38dp"

            android:paddingLeft="8dp"
            android:text="@string/mine_card_run_end_location"
            android:textColor="@color/color_333333"

            android:textSize="@dimen/size_16sp" />

        <TextView

                            android:textColor="@color/color_86898"
                            android:textSize="@dimen/size_14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"

                            android:layout_marginTop="24dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_battery_charging_hour_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9"
                                android:textColor="@color/color_00000"
                                android:textSize="@dimen/size_32sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="8dp"
                                android:text="h"
                                android:textColor="@color/color_00000"
                                android:textSize="@dimen/size_12sp" />
                            <TextView
                                android:id="@+id/tv_battery_charging_minute_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="59"
                                android:textColor="@color/color_00000"
                                android:textSize="@dimen/size_32sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="8dp"
                                android:text="m"
                                android:textColor="@color/color_00000"
                                android:textSize="@dimen/size_12sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/white_eeeeee" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="45dp"
                        android:paddingTop="33dp">

                        <ImageView
                            android:id="@+id/iv_battery_tmp_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/card_tmp_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@+id/iv_battery_tmp_normal"
                            android:text="温度正常"
                            android:textColor="@color/color_86898"
                            android:textSize="@dimen/size_14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="left"

                            android:layout_marginTop="24dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_battery_tmp_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23"
                                android:textColor="@color/color_00000"
                                android:textSize="@dimen/size_32sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="8dp"
                                android:text="°C"
                                android:textColor="@color/color_00000"
                                android:textSize="@dimen/size_12sp" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white_eeeeee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="45dp"
                        android:paddingTop="33dp">

                        <ImageView
                            android:id="@+id/iv_battery_voltage_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/card_voltage_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@+id/iv_battery_voltage_normal"
                            android:text="电压正常"
                            android:textColor="@color/color_86898"
                            android:textSize="@dimen/size_14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="left"
                            android:layout_marginTop="24dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_battery_voltage_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="72"
                                android:textColor="@color/color_00000"
                                android:textSize="@dimen/size_32sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="8dp"
                                android:text="ah"
                                android:textColor="@color/color_00000"
                                android:textSize="@dimen/size_12sp" />
                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/white_eeeeee" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="45dp"
                        android:paddingTop="33dp">

                        <ImageView
                            android:id="@+id/iv_battery_surplus_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/card_voltage_number" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@+id/iv_battery_surplus_number"
                            android:text="充放电次数"
                            android:textColor="@color/color_86898"
                            android:textSize="@dimen/size_14sp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="left"
                            android:layout_marginTop="24dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_battery_charging_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="480"
                                android:textColor="@color/color_00000"
                                android:textSize="@dimen/size_32sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="8dp"
                                android:text="ah"
                                android:textColor="@color/color_00000"
                                android:textSize="@dimen/size_12sp" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_two_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_right_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/margin_right_24dp"
                android:background="@drawable/shape_btn_confirm_normal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_right_24dp"
                    android:paddingTop="@dimen/margin_right_24dp"
                    android:text="当前车况"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_card_gps_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/corner_5_blue"

                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/margin_5dp"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/margin_5dp"
                            android:text="正常"
                            android:textColor="@color/white"

                            android:textSize="@dimen/size_10sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_right_24dp"
                            android:layout_marginTop="2dp"


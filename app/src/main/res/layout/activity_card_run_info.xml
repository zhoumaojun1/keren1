                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_right_24dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="20dp"
                            android:text="车辆GPS"
                            android:textColor="@color/color_86898"

                            android:textSize="@dimen/size_14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white_eeeeee" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_card_ble_connect_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/corner_5_blue"

                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/margin_5dp"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/margin_5dp"
                            android:text="正常"
                            android:textColor="@color/white"

                            android:textSize="@dimen/size_10sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

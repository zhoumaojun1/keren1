                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/card_battery_level" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@+id/iv_battery_quantity_of_electricity"
                            android:text="电池电量"
                            android:textColor="@color/color_86898"
                            android:textSize="@dimen/size_14sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"

                            android:layout_marginTop="24dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_battery_level_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="98"
                                android:textColor="@color/color_00000"
                                android:textSize="@dimen/size_32sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="8dp"
                                android:text="%"

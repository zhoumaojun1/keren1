<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    tools:context=".user.home.auth.ForgetPassNextActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_full"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_app_voice_service"
                style="@style/settingsUserInfoItem">


                <TextView
                    style="@style/elevationItemTitle1"
                    android:layout_centerVertical="true"
                    android:paddingLeft="25dp"
                    android:text="@string/mine_speech_sounds_service" />

                <ImageView
                    style="@style/itemRightImage1"
                    android:src="@mipmap/mine_back_icon" />
            </RelativeLayout>
            <View style="@style/setViewLeft" />
            <RelativeLayout
                android:id="@+id/rl_app_language_settings"
                style="@style/settingsUserInfoItem">
                <TextView
                    style="@style/elevationItemTitle1"
                    android:layout_centerVertical="true"
                    android:paddingLeft="25dp"
                    android:text="@string/mine_language_settings" />
                <TextView
                    android:id="@+id/tv_system_sync"
                    style="@style/itemRightImage"
                    android:text="跟随系统"
                    android:textColor="@color/color_86898"
                    android:layout_marginRight="25dp" />

                <ImageView

                    style="@style/itemRightImage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mine_back_icon" />
            </RelativeLayout>
            <View style="@style/setViewLeft" />
            <RelativeLayout
                android:id="@+id/rl_app_feed_back"
                style="@style/settingsUserInfoItem">
                <TextView
                    style="@style/elevationItemTitle1"
                    android:layout_centerVertical="true"
                    android:paddingLeft="25dp"
                    android:text="@string/mine_feed_back" />
                <ImageView
                    style="@style/itemRightImage1"
                    android:src="@mipmap/mine_back_icon" />
            </RelativeLayout>
            <View style="@style/setViewLeft" />
            <RelativeLayout
                android:id="@+id/rl_app_about_my"
                style="@style/settingsUserInfoItem">
                <TextView
                    style="@style/elevationItemTitle1"
                    android:layout_centerVertical="true"
                    android:paddingLeft="25dp"
                    android:text="@string/mine_about_my" />
                <ImageView
                    style="@style/itemRightImage1"
                    android:layout_marginRight="25dp"
                    android:src="@mipmap/about_mine" />
                <ImageView
                    style="@style/itemRightImage1"
                    android:src="@mipmap/mine_back_icon" />
            </RelativeLayout>
            <View style="@style/setViewLeft" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
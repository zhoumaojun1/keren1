<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F5F5F5"
    tools:context=".user.home.auth.ForgetPassNextActivity">

    <RelativeLayout
        android:id="@+id/rl_sear_phone_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_right_24dp"
        android:layout_marginRight="@dimen/dimen_24"
        android:paddingLeft="@dimen/dimen_14"
        android:paddingRight="@dimen/dimen_14"

        android:background="@drawable/shape_share_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_card_share_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_14dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/card_share_left" />
        <TextView
           android:id="@+id/tv_from_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mine_back_icon"
            android:text="分享人：可人"
           android:layout_marginTop="19dp"
            android:layout_marginLeft="12dp"
            android:paddingLeft="@dimen/dimen_5"
            android:textSize="@dimen/size_10sp"
            android:layout_toRightOf="@+id/iv_card_share_photo"

            android:textColor="@color/color_1FC8A9"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingRight="@dimen/dimen_5"
            android:background="@drawable/bounder"
            />
        <TextView
            android:id="@+id/iv_card_share_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv_card_share_photo"

            android:layout_below="@+id/tv_from_share"
            android:text="SAR5-HiLink"
            android:textColor="@color/color_333333"

            android:textSize="@dimen/dimen_24" />

        <TextView
            android:id="@+id/iv_card_share_che_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_card_share_name"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv_card_share_photo"

            android:text="车架号后四位：8521"
            android:textColor="@color/color_86898"
            android:textSize="@dimen/size_12sp" />


        <TextView
            android:id="@+id/iv_card_share_agree_status"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/mine_back_icon"
            android:layout_centerVertical="true"
            android:text="接受分享"
            android:textColor="@color/white"
            android:paddingTop="@dimen/margin_5dp"
            android:layout_marginLeft="@dimen/dimen_20"
            android:paddingBottom="@dimen/margin_5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            android:background="@drawable/shape_btn_confirm_pressed"
            />

    </RelativeLayout>






</androidx.constraintlayout.widget.ConstraintLayout>
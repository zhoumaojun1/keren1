<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/rl_sear_phone_share"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:background="@drawable/corner_5_black_bg"
        android:paddingLeft="@dimen/margin_right_24dp"
        android:paddingRight="@dimen/margin_right_24dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/ll_title_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_right_24dp">

            <ImageView
                android:id="@+id/iv_card_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/device_bind_card" />

            <TextView
                android:id="@+id/tv_card_run_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:gravity="center"

                android:text="2023-05-25 14:31"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/size_20sp" />


        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_title_head"
            android:layout_marginTop="10dp"
            android:background="@color/white_eeeeee" />

        <ImageView
            android:id="@+id/iv_card_run_record_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="@dimen/margin_right_24dp"
            android:src="@mipmap/card_run_record_start_location" />

        <ImageView
            android:id="@+id/iv_card_run_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_card_run_record_start"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"

            android:src="@mipmap/card_run_record_line" />

        <ImageView
            android:id="@+id/iv_card_run_record_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_card_run_record"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="8dp"

            android:src="@mipmap/card_run_record_end_location" />

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_toRightOf="@+id/iv_card_run_record_start"
            android:layout_marginTop="18dp"
            android:paddingLeft="8dp"
            android:text="@string/mine_card_run_start_location"
            android:textColor="@color/color_86898"

            android:textSize="@dimen/size_12sp" />


        <TextView
            android:id="@+id/tv_card_run_start_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card_name"
            android:layout_marginLeft="26dp"
            android:paddingLeft="18dp"

            android:text="广东省深圳市龙岗区路北大道"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_16sp" />


        <TextView
            android:id="@+id/tv_card_run_record_end_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_card_run_record_end"
            android:layout_below="@+id/tv_card_run_start_location"
            android:layout_marginTop="38dp"

            android:paddingLeft="8dp"
            android:text="@string/mine_card_run_end_location"
            android:textColor="@color/color_86898"

            android:textSize="@dimen/size_12sp" />

        <TextView
            android:id="@+id/tv_card_run_end_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card_run_record_end_location"
            android:layout_marginLeft="26dp"
            android:paddingLeft="18dp"
            android:text="广东省深圳市龙岗区路北大道"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_16sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_card_run_end_location"
            android:layout_marginTop="20dp"
            android:background="@color/white_eeeeee" />

        <LinearLayout
            android:id="@+id/ll_one_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:layout_marginTop="10dp"
                android:text="@string/mine_card_run_mileage"
                android:textColor="@color/color_86898"
                android:textSize="@dimen/size_12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_run_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56.8"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="3dp"
                    android:text="km"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_14sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_two_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_toRightOf="@+id/ll_one_view"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/mine_card_run_time"
                android:textColor="@color/color_86898"
                android:textSize="@dimen/size_12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_run_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="3dp"
                    android:text="min"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_14sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_toRightOf="@+id/ll_two_view"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/mine_card_run_top_speed"
                android:textColor="@color/color_86898"
                android:textSize="@dimen/size_12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_run_top_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="2dp"
                    android:text="km/h"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_14sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_four_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_toRightOf="@+id/ll_three_view"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/mine_card_run_speed"
                android:textColor="@color/color_86898"
                android:textSize="@dimen/size_12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_run_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="3dp"
                    android:text="km/h"
                    android:textColor="@color/color_00000"
                    android:textSize="@dimen/size_14sp" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
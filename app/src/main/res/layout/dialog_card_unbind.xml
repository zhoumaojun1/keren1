<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shape_bg_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="@dimen/margin_right_24dp"

            android:text="@string/mine_card_remove_bind_ok"
            android:textColor="@color/color_00000"
            android:textSize="@dimen/size_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:background="@color/white"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_right_24dp"
            android:layout_marginEnd="@dimen/margin_right_24dp"
            android:paddingTop="4dp"
            android:text="@string/mine_card_info_delete"
            android:textColor="@color/color_00000"
            android:textSize="@dimen/size_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_right_24dp"
            android:background="@color/color_AAAAAA"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include layout="@layout/include_cancel_confirm" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>